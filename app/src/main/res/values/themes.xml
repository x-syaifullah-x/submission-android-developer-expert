<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/black_russian</item>
        <item name="colorPrimaryVariant">@color/black_russian</item>
        <item name="colorAccent">@color/black_russian</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Splash Start -->
    <style name="AppTheme.Splash" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_activity</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <color name="splash_logo">@color/white</color>
    <color name="splash_background">@color/black</color>
    <!-- Splash End -->

    <!-- Toolbar Start -->
    <style name="Toolbar" parent="@style/Widget.MaterialComponents.Toolbar">
        <item name="titleTextAppearance">@style/ToolbarTitleTheme</item>
        <item name="popupTheme">@style/AppTheme.PopupOverlay</item>
        <item name="subtitleTextAppearance">@style/ToolbarSubtitleTheme</item>
        <item name="titleTextColor">@android:color/white</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToolbarTitleTheme" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/_18sdp</item>
    </style>

    <style name="ToolbarSubtitleTheme" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>
    <!-- Toolbar End -->

    <style name="item_rating_bar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="colorControlNormal">@color/blue_grey_300</item>
        <item name="colorControlActivated">@color/blue_grey_300</item>
        <item name="android:progressBackgroundTint">@color/blue_grey_300</item>
        <item name="android:secondaryProgressTint">@color/blue_grey_300</item>
        <item name="android:progressTint">@color/blue_grey_300</item>
    </style>

    <style name="fab_search" parent="@style/Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/white</item>
        <item name="tint">@color/black_russian</item>
    </style>

    <style name="CollapsingToolbarLayoutExpandedTextStyle" parent="AppTheme">
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:textSize">0sp</item>
    </style>

    <color name="detail_collapsing_content_scrim">@color/black_russian</color>
</resources>